RewriteEngine On

# Redireciona requisições da API
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# /api/products -> /api/products.php
RewriteRule ^api/products/?$ api/products.php [L,QSA]

# /api/products/123 -> /api/products.php?id=123
RewriteRule ^api/products/([0-9]+)/?$ api/products.php?id=$1 [L,QSA]

# /api/login -> /api/login.php
RewriteRule ^api/login/?$ api/login.php [L,QSA]

# Força HTTPS (opcional, descomente se tiver SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
